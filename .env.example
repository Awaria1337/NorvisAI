# Database
DATABASE_URL="postgresql://username:password@localhost:5432/norvis_ai?schema=public"
MONGODB_URI="mongodb://localhost:27017/norvis_ai"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
